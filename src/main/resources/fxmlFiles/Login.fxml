<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="241.0" prefWidth="575.0" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <TextField fx:id="usernameField" promptText="Enter your username" />
      <TextField fx:id="passwordField" promptText="Enter the Serverpassword" />
      <Button fx:id="connectButton" mnemonicParsing="false" onAction="#connect" text="Connect" />
      <TextArea fx:id="errorField" prefHeight="0.0" prefWidth="503.0" />
   </children>
</VBox>
